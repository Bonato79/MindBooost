<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85B5FE"
    android:baselineAligned="false"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ZenActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="193dp"
        android:layout_height="76dp"
        android:lineSpacingExtra="8sp"
        android:text="Tela Zen"
        android:textAlignment="center"
        android:textColor="#F1EEEE"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="158dp"
        android:layout_height="66dp"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="158dp"
        android:layout_height="66dp"
        android:layout_marginStart="57dp"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.973" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toTopOf="@+id/audio1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153"
        app:srcCompat="@drawable/fones_de_ouvido" />

    <RadioButton
        android:id="@+id/audio1"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="188dp"
        android:foreground="@drawable/fogueira"
        android:text="audio1"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <RadioButton
        android:id="@+id/audio2"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:foreground="@drawable/floresta"
        android:text="audio2"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audio1"
        app:layout_constraintVertical_bias="0.465" />

    <RadioButton
        android:id="@+id/audio3"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="76dp"
        android:foreground="@drawable/cachoeira"
        android:text="audio3"
        app:layout_constraintBottom_toTopOf="@+id/btn_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/audio1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.218" />

    <RadioButton
        android:id="@+id/audio4"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginEnd="36dp"
        android:foreground="@drawable/praia"
        android:text="audio4"
        app:layout_constraintBottom_toTopOf="@+id/btn_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/audio2"
        app:layout_constraintTop_toBottomOf="@+id/audio3"
        app:layout_constraintVertical_bias="0.509" />

    <!-- Adicione elementos para controle de áudio, como botões de reprodução/pausa, barra de progresso, etc., conforme necessário. -->

</androidx.constraintlayout.widget.ConstraintLayout>
